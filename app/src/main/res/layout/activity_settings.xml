<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="devesh.ephrine.health.hub.SettingsActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="File Storage Quota"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/textView47"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textAlignment="viewStart"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/progressBar5"
                            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/textView77"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Account Status: Free Account" />

                        <TextView
                            android:id="@+id/textView78BuyDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purchase Date: --" />

                        <TextView
                            android:id="@+id/textView78Exp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expiry Date: --" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView55"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="BuyMore"
                                android:text="Buy More Storage Space"
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="visible" />

                        </LinearLayout>

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                        <TextView
                            android:id="@+id/textView87"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="policy"
                            android:text="Read Privacy Policy for Health Data Storage"
                            android:textAlignment="center"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView64"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign-up as Medical Professional"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Doctors, Pharmacist, Nurse, Diagnostic Center, Hospitals, Clinics or any other type of certified Medical Professionals can Sign-up to view or edit Patient Health Records   " />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView58"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Health Data Access Log"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Log Data of All the Doctors and Pharmacist who viewed or edited your Health Records" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Erase and Reset All My Access Tokens"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Erasing All Access Tokens which will restrict access to all Doctors, Pharmacist and all other people with your Access Tokens" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:visibility="gone" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:contentDescription="You will receive monthly news updates related to our products and services "
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="News Updates"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textOff="You will not receive monthly news updates related to our products and services "
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:checked="true" />

                <TextView
                    android:id="@+id/textView62"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="50dp"
                    android:text="You will receive monthly news updates related to our products and services via email  "
                    android:visibility="gone" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <Button
                        android:id="@+id/button13"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@android:color/holo_red_light"
                        android:text="Delete Account"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:visibility="invisible" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/button4"
                        style="@style/com_facebook_button_share"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:onClick="signout"
                        android:text="Sign out"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:text="More Awesome Fatures will be Added Soon !!"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    <include
        android:id="@+id/webCard"
        layout="@layout/activity_browser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    </RelativeLayout>

